<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@+id/reviews_recycler">

    <TextView
        android:id="@+id/reviewCreateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already watched? Share your expressions!"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/reviewCreateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/reviewCreateLabel"
        android:hint="@string/review_create_placeholder"
        android:inputType="textMultiLine"
        android:lines="6"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/reviewCreateButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/reviewCreateText"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Send"
        />

</androidx.constraintlayout.widget.ConstraintLayout>